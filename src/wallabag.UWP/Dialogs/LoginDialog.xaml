<ContentDialog
    x:Class="wallabag.Dialogs.LoginDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="RE-LOGIN TO WALLABAG"
    x:Uid="LoginDialog"
    DataContext="{Binding Login, Source={StaticResource Locator}}"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClickAsync"
    PrimaryButtonText="Login"
    TitleTemplate="{StaticResource ContentDialogTitleDataTemplate}"
    mc:Ignorable="d">

    <StackPanel>
        <TextBlock
            Margin="0,0,0,16"
            x:Uid="ReLoginErrorMessageTextBlock"
            Text="Sorry, something went wrong. To continue using this app, please login again."
            TextWrapping="Wrap" />
        <TextBox
            x:Uid="UsernameTextBox"
            Margin="0,8,0,0"
            Header="Username"
            IsSpellCheckEnabled="False"
            Text="{x:Bind ViewModel.Username, Mode=TwoWay}" />
        <PasswordBox
            x:Uid="PasswordBox"
            Margin="0,8,0,0"
            Header="Password"
            Password="{x:Bind ViewModel.Password, Mode=TwoWay}" />
    </StackPanel>
</ContentDialog>
